<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/InkManager</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.connection.password">postgres</property>
  <property name="hbm2ddl.auto">update</property>
  <property name="show_sql">true</property>
  <mapping class="com.database.Benutzer"/>
  <mapping class="com.database.Arbeitsmittel"/>
  <mapping class="com.database.Dokument"/>
  <mapping class="com.database.Kunde"/>
  <mapping class="com.database.Motiv"/>
  <mapping class="com.database.Termin"/>
 </session-factory>
</hibernate-configuration>
